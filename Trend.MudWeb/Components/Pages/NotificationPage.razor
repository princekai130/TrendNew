@page "/notifications"
@using Trend.MudWeb.Models
@using Trend.MudWeb.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject TrendRepo Repo
@inject ISnackbar Snackbar
@inject AuthenticationStateProvider AuthProvider

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@400;600;700&display=swap');

    .notif-container {
        font-family: 'Outfit', sans-serif;
    }

    .notif-card {
        background: var(--mud-palette-surface);
        border: 1px solid var(--mud-palette-divider);
        border-radius: 16px !important;
        transition: all 0.2s ease;
        position: relative;
    }

        .notif-card.unread {
            background: rgba(var(--mud-palette-primary-rgb), 0.02);
            border-left: 4px solid var(--mud-palette-primary) !important;
        }

        .notif-card:hover {
            background: var(--mud-palette-background-grey);
        }

    .unread-dot {
        height: 8px;
        width: 8px;
        background-color: var(--mud-palette-primary);
        border-radius: 50%;
        display: inline-block;
        margin-right: 8px;
    }

    .notif-icon-wrapper {
        height: 40px;
        width: 40px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(var(--mud-palette-primary-rgb), 0.1);
        color: var(--mud-palette-primary);
    }
</style>

<PageTitle>Pusat Notifikasi - Trendz</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="notif-container mt-10 mb-16">
    @* --- HEADER --- *@
    <MudStack Direction="Row" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Class="mb-8">
        <MudStack Spacing="0">
            <MudText Typo="Typo.h4" Class="fw-bold">Pusat Notifikasi</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">Tetap terhubung dengan tren terbaru.</MudText>
        </MudStack>

        @if (_dbNotifications?.Any(n => !(n.IsRead ?? false)) ?? false)
        {
            <MudButton Variant="Variant.Text"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Rounded.DoneAll"
                       OnClick="MarkAllAsRead"
                       Style="text-transform: none; font-weight: 600;">
                Tandai Semua Dibaca
            </MudButton>
        }
    </MudStack>

    @if (_dbNotifications == null)
    {
        <MudStack Spacing="3">
            @for (int i = 0; i < 4; i++)
            {
                <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="80px" Class="rounded-xl" />
            }
        </MudStack>
    }
    else if (!_dbNotifications.Any())
    {
        <div class="text-center py-16">
            <div class="d-flex justify-center mb-4">
                <div style="background: var(--mud-palette-background-grey); padding: 24px; border-radius: 50%;">
                    <MudIcon Icon="@Icons.Material.TwoTone.NotificationsNone" Style="font-size: 4rem; opacity: 0.3;" />
                </div>
            </div>
            <MudText Typo="Typo.h6" Class="fw-bold">Semua Bersih!</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">Anda belum memiliki notifikasi saat ini.</MudText>
        </div>
    }
    else
    {
        <MudStack Spacing="3">
            @foreach (var note in _dbNotifications)
            {
                bool isUnread = !(note.IsRead ?? false);

                <MudPaper Class="@($"pa-4 notif-card shadow-none {(isUnread ? "unread" : "")}")"
                          Elevation="0">
                    <MudStack Direction="Row" AlignItems="AlignItems.Start" Spacing="4">
                        <div class="notif-icon-wrapper">
                            <MudIcon Icon="@(isUnread? Icons.Material.Rounded.NotificationsActive : Icons.Material.Rounded.Notifications)" Size="Size.Small" />
                        </div>

                        <div style="flex-grow: 1;">
                            <div class="d-flex align-center justify-space-between mb-1">
                                <div class="d-flex align-center">
                                    @if (isUnread)
                                    {
                                        <span class="unread-dot"></span>
                                    }
                                    <MudText Typo="Typo.body1" Class="@(isUnread ? "fw-bold" : "")" Style="font-size: 0.95rem;">
                                        @note.Message
                                    </MudText>
                                </div>
                                <MudText Typo="Typo.caption" Color="Color.Secondary" Class="ml-4">
                                    @note.CreatedAt
                                </MudText>
                            </div>

                            <div class="d-flex align-center justify-space-between mt-2">
                                <div class="d-flex gap-2">
                                    @* Badge kategori sederhana berdasarkan isi pesan *@
                                    @if (note.Message.Contains("Viral", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <MudChip T="string" Size="Size.Small" Color="Color.Error" Variant="Variant.Text" Class="px-2 py-0" Style="font-size: 10px; font-weight: 800;">HOT TREND</MudChip>
                                    }
                                    else
                                    {
                                        <MudChip T="string" Size="Size.Small" Color="Color.Primary" Variant="Variant.Text" Class="px-2 py-0" Style="font-size: 10px; font-weight: 800;">SYSTEM</MudChip>
                                    }
                                </div>

                                @if (isUnread)
                                {
                                    <MudIconButton Icon="@Icons.Material.Rounded.CheckCircleOutline"
                                                   Color="Color.Primary"
                                                   Size="Size.Small"
                                                   OnClick="@(() => MarkAsRead(note))"
                                                   Title="Tandai telah dibaca" />
                                }
                            </div>
                        </div>
                    </MudStack>
                </MudPaper>
            }
        </MudStack>
    }
</MudContainer>

@code {
    private List<Trend.MudWeb.Models.Notifications>? _dbNotifications;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var userIdClaim = user.FindFirst("UserId")?.Value;
        int userId = string.IsNullOrEmpty(userIdClaim) ? 1 : int.Parse(userIdClaim);

        _dbNotifications = await Repo.GetUserNotificationsAsync(userId);
    }

    private async Task MarkAsRead(Trend.MudWeb.Models.Notifications note)
    {
        note.IsRead = true;
        // await Repo.MarkNotificationAsReadAsync(note.NotificationId);

        Snackbar.Add("Ditandai sebagai dibaca", Severity.Success);
        StateHasChanged();
    }

    private async Task MarkAllAsRead()
    {
        if (_dbNotifications == null) return;

        foreach (var note in _dbNotifications.Where(n => !(n.IsRead ?? false)))
        {
            note.IsRead = true;
            // await Repo.MarkNotificationAsReadAsync(note.NotificationId);
        }

        Snackbar.Add("Semua notifikasi telah dibaca", Severity.Info);
        StateHasChanged();
    }
}