@page "/dashboard"
@using Microsoft.AspNetCore.Authorization
@using Trend.MudWeb.Models
@using Trend.MudWeb.Services
@inject TrendRepo Repo
@inject ScrapingService Scraper
@inject AuthenticationStateProvider AuthProvider
@inject ISnackbar Snackbar
@attribute [Authorize]

<style>
    .db-wrapper {
        font-family: 'Outfit', sans-serif;
    }

    /* Hero Section Glow */
    .hero-bento {
        background: #0F172A;
        background-image: radial-gradient(at 0% 0%, rgba(99, 102, 241, 0.15) 0, transparent 50%), radial-gradient(at 100% 0%, rgba(244, 63, 94, 0.1) 0, transparent 50%);
        border-radius: 32px;
        color: white;
        border: 1px solid rgba(255,255,255,0.05);
    }

    /* Bento Card Styling */
    .bento-card {
        background: var(--mud-palette-surface);
        border: 1px solid var(--mud-palette-divider);
        border-radius: 24px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
    }

        .bento-card:hover {
            transform: scale(1.02);
            border-color: var(--mud-palette-primary);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

    /* Platform Branding */
    .badge-tiktok {
        background: #000;
        color: #fff;
        padding: 4px 12px;
        border-radius: 10px;
        font-weight: 800;
        font-size: 0.7rem;
    }

    .badge-ig {
        background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
        color: #fff;
        padding: 4px 12px;
        border-radius: 10px;
        font-weight: 800;
        font-size: 0.7rem;
    }

    .trend-title {
        font-size: 1.25rem;
        font-weight: 700;
        line-height: 1.2;
        letter-spacing: -0.5px;
    }

    .growth-text {
        font-family: 'JetBrains Mono', monospace;
        font-weight: 800;
        color: #10B981;
    }

    /* Floating Action Button Style */
    .refresh-fab {
        background: linear-gradient(90deg, #6366f1, #a855f7) !important;
        color: white !important;
        box-shadow: 0 10px 15px -3px rgba(99, 102, 241, 0.4) !important;
    }

    /* Merapikan Timeline agar tidak terlalu memakan ruang */
    .custom-timeline {
        padding-left: 0 !important;
    }

        .custom-timeline .mud-timeline-item-content {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

    .ai-insight-btn {
        background-color: white !important;
        color: var(--mud-palette-primary) !important;
        font-weight: 700 !important;
        border-radius: 20px !important;
    }
</style>

<MudContainer MaxWidth="MaxWidth.Large" Class="db-wrapper mt-8 mb-16">
    @* --- TOP BENTO: HERO & QUICK STATS --- *@
    <MudGrid>
        <MudItem xs="12" lg="8">
            <MudPaper Class="pa-10 hero-bento h-100 d-flex flex-column justify-center relative overflow-hidden">
                <MudStack Spacing="1">
                    <MudText Typo="Typo.h6" Style="opacity: 0.6; letter-spacing: 2px;">WELCOME BACK</MudText>
                    <MudText Typo="Typo.h2" Class="fw-bold mb-2">@_username <span style="color: #6366f1;">.</span></MudText>
                    <MudText Typo="Typo.h6" Style="opacity: 0.8; font-weight: 300;">
                        Saat ini ada <span class="fw-bold text-white">@_viralCount tren viral</span> di niche <span class="fw-bold text-white">@_userNicheName</span> yang perlu kamu perhatikan.
                    </MudText>
                </MudStack>
                <div class="mt-8 d-flex gap-4">
                    <MudButton Variant="Variant.Filled" OnClick="RefreshData" Class="refresh-fab rounded-xl px-8 py-3" StartIcon="@Icons.Material.Rounded.AutoAwesome">
                        Scan Niche Sekarang
                    </MudButton>
                </div>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" lg="4">
            <MudGrid>
                <MudItem xs="6" lg="12">
                    <MudPaper Class="pa-6 bento-card d-flex flex-column justify-center align-center text-center">
                        <MudIcon Icon="@Icons.Material.Rounded.TrendingUp" Color="Color.Primary" Size="Size.Large" Class="mb-2" />
                        <MudText Typo="Typo.h4" Class="fw-bold">@_totalTrends</MudText>
                        <MudText Typo="Typo.caption" Color="Color.Secondary">TOTAL TRENDS</MudText>
                    </MudPaper>
                </MudItem>
                <MudItem xs="6" lg="12">
                    <MudPaper Class="pa-6 bento-card d-flex flex-column justify-center align-center text-center">
                        <MudIcon Icon="@Icons.Material.Rounded.Update" Color="Color.Info" Size="Size.Large" Class="mb-2" />
                        <MudText Typo="Typo.h4" Class="fw-bold">@_lastUpdate.ToString("HH:mm")</MudText>
                        <MudText Typo="Typo.caption" Color="Color.Secondary">LAST UPDATED</MudText>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudItem>
    </MudGrid>

    @* --- MIDDLE BENTO: TRENDING FEED --- *@
    <div class="d-flex align-center justify-space-between mt-12 mb-6">
        <MudText Typo="Typo.h4" Class="fw-bold">Market Pulse</MudText>
        <MudButton EndIcon="@Icons.Material.Rounded.NorthEast" Href=/trendexplorer Color=" Color.Primary" Style="text-transform: none;">View Explorer</MudButton>
    </div>



    <MudGrid>
        @if (!_viralTrends.Any())
        {
            <MudItem xs="12">
                <div class="text-center pa-16 bento-card border-dashed">
                    <MudIcon Icon="@Icons.Material.Rounded.CloudOff" Size="Size.Large" Color="Color.Secondary" Opacity="0.5" />
                    <MudText Class="mt-4" Color="Color.Secondary">No viral data found. Let's sync your niche.</MudText>
                </div>
            </MudItem>
        }
        else
        {
            @foreach (var trend in _viralTrends.Take(4))
            {
                <MudItem xs="12" md="6" lg="3">
                    <MudPaper Class="pa-6 bento-card">
                        <MudStack Spacing="4">
                            <div class="d-flex justify-space-between align-center">
                                <span class="@(trend.Platform == "TikTok" ? "badge-tiktok" : "badge-ig")">@trend.Platform</span>
                                <div class="growth-text">+@trend.GrowthScore%</div>
                            </div>

                            <MudText Class="trend-title">@trend.TrendName</MudText>

                            @* Mini Sparkline Placeholder - Memberikan kesan data hidup *@
                            <div style="height: 40px; width: 100%; background: linear-gradient(90deg, transparent, rgba(16, 185, 129, 0.1), transparent); border-radius: 8px;" class="d-flex align-end pa-1">
                                <div style="height: 30%; width: 15%; background: #10B981; border-radius: 2px; margin-right: 2px;"></div>
                                <div style="height: 50%; width: 15%; background: #10B981; border-radius: 2px; margin-right: 2px;"></div>
                                <div style="height: 80%; width: 15%; background: #10B981; border-radius: 2px; margin-right: 2px;"></div>
                                <div style="height: 60%; width: 15%; background: #10B981; border-radius: 2px; margin-right: 2px;"></div>
                                <div style="height: 100%; width: 15%; background: #10B981; border-radius: 2px;"></div>
                            </div>

                            <MudStack Row AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Source: @trend.Platform API</MudText>
                                <MudIconButton Icon="@Icons.Material.Rounded.ArrowForwardIos" Size="Size.Small" />
                            </MudStack>
                        </MudStack>
                    </MudPaper>
                </MudItem>
            }
        }

        @* --- BOTTOM BENTO: ACTIVITY & INSIGHTS --- *@
        <MudItem xs="12" md="7" Class="mt-4">
            <MudPaper Class="pa-8 bento-card shadow-none">
                <MudText Typo="Typo.h5" Class="fw-bold mb-6">Recent Activity</MudText>
                <MudTimeline TimelinePosition="TimelinePosition.Start" Dense="true" Class="custom-timeline">
                    @foreach (var notif in _recentNotifs)
                    {
                        <MudTimelineItem Color="Color.Primary" Size="Size.Small">
                            <ItemContent>
                                <MudText Typo="Typo.body2" Class="fw-bold">@notif.Message</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">@notif.CreatedAt.ToString("ddd, HH:mm") WIB</MudText>
                            </ItemContent>
                        </MudTimelineItem>
                    }
                </MudTimeline>>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="5" Class="mt-4">
            <MudPaper Class="pa-8 bento-card shadow-none overflow-hidden relative" Style="background: var(--mud-palette-primary); color: white;">
                <MudIcon Icon="@Icons.Material.Rounded.Lightbulb" Style="position: absolute; right: -10px; top: -10px; font-size: 8rem; opacity: 0.2;" />
                <MudText Typo="Typo.h5" Class="fw-bold mb-4">AI Smart Insight</MudText>
                <MudText Typo="Typo.body1" Style="line-height: 1.6; opacity: 0.9;">
                    Berdasarkan data terbaru, tren <span class="fw-bold">@(_viralTrends.FirstOrDefault()?.TrendName ?? "Niche kamu")</span> sedang memasuki fase "Early-Peak".
                    <br /><br />
                    Gunakan sound <span class="fw-bold">@(_viralTrends.FirstOrDefault()?.SoundName ?? "terpopuler")</span> malam ini pukul 19:00 - 21:00 untuk FYP maksimal.
                </MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Surface" Class="mt-8 rounded-pill px-8" Style="color: var(--mud-palette-primary); font-weight: 700;">
                    Generate Full Strategy
                </MudButton>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private string _username = "User";
    private string _userNicheName = "Umum";
    private int _userNicheId = 0;
    private int _userId = 0;
    private int _totalTrends = 0;
    private int _viralCount = 0;
    private DateTime _lastUpdate = DateTime.Now;

    private List<SocialTrend> _viralTrends = new();
    private List<UserNotification> _recentNotifs = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
        await LoadDashboardStats();
    }

    private async Task LoadUserData()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var userClaims = authState.User;
        _username = userClaims.Identity?.Name ?? "User";

        var idStr = userClaims.FindFirst("UserId")?.Value;
        if (int.TryParse(idStr, out int id))
        {
            _userId = id;
            var user = await Repo.GetUserByIdAsync(_userId);
            if (user != null)
            {
                _userNicheId = user.NicheId ?? 0;
                _userNicheName = user.Niche?.NicheName ?? "Umum";
            }
        }
    }

    private async Task LoadDashboardStats()
    {
        // Ambil tren viral dari database
        _viralTrends = await Repo.GetViralTrendsAsync();
        _totalTrends = (await Repo.GetTrendsAsync()).Count;
        _viralCount = _viralTrends.Count;
        
        // Ambil 3 notifikasi terakhir
        var allNotifs = await Repo.GetUserNotificationsAsync(_userId);
        _recentNotifs = allNotifs.Take(3).ToList();
    }

    private async Task RefreshData()
    {
        try
        {
            Snackbar.Add("Memulai pemindaian tren niche...", Severity.Info);
            
            // PERBAIKAN: Mengirim _userNicheId dan _userId ke Scraper
            var results = await Scraper.FetchTrendDataByNiche(_userNicheId, _userId);
            
            if (results.Any())
            {
                // Simpan ke DB (TrendRepo akan mengkonversi TrendData ke SocialTrend)
                await Repo.SaveTrendRangeAsync(results, _userNicheId);
                
                // Refresh tampilan
                await LoadDashboardStats();
                _lastUpdate = DateTime.Now;
                Snackbar.Add($"Berhasil menemukan {results.Count} tren baru!", Severity.Success);
            }
            else
            {
                Snackbar.Add("Tidak ada tren baru saat ini.", Severity.Normal);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add("Gagal refresh data: " + ex.Message, Severity.Error);
        }
    }
}