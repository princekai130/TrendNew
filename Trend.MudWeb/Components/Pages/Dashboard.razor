@page "/dashboard"
@using Trend.MudWeb.Models
@using Trend.MudWeb.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject ScrapingService Scraper
@inject TrendAnalyzer Analyzer
@inject Report ReportService
@inject TrendRepo Repo
@inject ISnackbar Snackbar
@rendermode InteractiveServer

<PageTitle>Dashboard - Trendz Market Pulse</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">
    @* --- HEADER DASHBOARD DENGAN TOMBOL REFRESH --- *@
    <MudStack Direction="Row" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Class="mb-10">
        <MudStack>
            <MudText Typo="Typo.h3" Class="fw-bold">
                Market Pulse 🚀
                @if (_isSyncing)
                {
                    <MudProgressCircular Color="Color.Info" Size="Size.Small" Indeterminate="true" Class="ml-2" />
                }
            </MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Insight tren real-time berbasis AI untuk creator & brand.
            </MudText>
        </MudStack>

        <MudButton OnClick="@(() => Snackbar.Add("Tes Snackbar Berhasil!", Severity.Success))">
            Tes Notifikasi
        </MudButton>
        <MudButton OnClick="TestSnackbar">
            Tes Notifikasi
        </MudButton>

        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.Refresh"
                   OnClick="RefreshTrends"
                   @* TAMBAHKAN ATAU PERBARUI DI SINI *@
                   Disabled="@(_isLoading || _isSyncing)"
                   Class="rounded-pill px-6">
            @if (_isSyncing)
            {
                <span>Menghubungkan API...</span>
            }
            else
            {
                <span>@(_isLoading ? "Memuat Data..." : "Refresh Data")</span>
            }
        </MudButton>
    </MudStack>


    @if (_isLoading)
    {
        <MudStack AlignItems="AlignItems.Center" Class="pa-12">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
            <MudText Typo="Typo.body1">Menghubungkan ke Apify & Menganalisis Tren TikTok...</MudText>
        </MudStack>
    }
    else
    {
        <MudGrid Class="mb-10">
            @foreach (var item in _trends.Take(6))
            {
                <MudItem xs="12" md="4">
                    <MudPaper Elevation="2" Class="trend-card">
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle1" Class="fw-bold">
                                @item.TrendName
                            </MudText>

                            <MudText Typo="Typo.caption" Color="Color.Secondary">
                                Platform: @item.Platform
                            </MudText>

                            <MudProgressLinear Value="@(Math.Min(100, Convert.ToDouble(item.GrowthScore)))" />

                            <MudText Typo="Typo.caption" Align="Align.Right">
                                Growth Score: <b>@item.GrowthScore%</b>
                            </MudText>
                        </MudStack>
                    </MudPaper>
                </MudItem>
            }
        </MudGrid>


        <MudGrid>
            @* 1. Status Utama (Hasil TrendAnalyzer.AnalyzeTrend) *@
            <MudItem xs="12" md="8">
                <MudPaper Class="pa-8 rounded-xl ai-insight-card" Elevation="4">
                    <MudText Typo="Typo.h6" Class="mb-2 fw-bold">
                        AI Market Insight 🤖
                    </MudText>

                    @if (_topTrend != null)
                    {
                        <MudStack Spacing="3">
                            <MudStack Direction="Row" AlignItems="AlignItems.End">
                                <MudText Typo="Typo.h2" Color="Color.Primary" Class="fw-bold">
                                    @_topTrend.GrowthScore%
                                </MudText>
                                <MudText Typo="Typo.subtitle1" Class="ml-3">
                                    @_topTrend.TrendName
                                </MudText>
                            </MudStack>

                            <MudAlert Severity="Severity.Success"
                                      Variant="Variant.Outlined"
                                      Icon="@Icons.Material.Filled.AutoFixHigh">
                                @_analysisResult
                            </MudAlert>
                        </MudStack>
                    }
                    else
                    {
                        <MudSkeleton Height="160px" />
                    }
                </MudPaper>

            </MudItem>

            @* 2. Quick Report Stats *@
            <MudItem xs="12" md="4">
                <MudPaper Class="pa-6 rounded-xl" Elevation="2">
                    <MudText Typo="Typo.subtitle1" Class="fw-bold mb-4">
                        Latest Report 📄
                    </MudText>

                    <MudStack Spacing="2">
                        <MudText Typo="Typo.caption">
                            Report ID
                        </MudText>
                        <MudText Typo="Typo.body1" Class="fw-bold">
                            #@ReportService.reportId
                        </MudText>

                        <MudDivider />

                        <MudText Typo="Typo.caption">
                            Generated At
                        </MudText>
                        <MudText Typo="Typo.body2">
                            @ReportService.generatedAt.ToString("HH:mm")
                        </MudText>

                        <MudButton Variant="Variant.Outlined"
                                   Color="Color.Primary"
                                   FullWidth
                                   Class="mt-2"
                                   Href="/MarketReport">
                            View Full Report
                        </MudButton>
                    </MudStack>
                </MudPaper>

            </MudItem>

            @* 3. Competitor Snapshot *@
            <MudItem xs="12">
                <MudText Typo="Typo.h6" Class="mt-10 mb-4 fw-bold">
                    Intelligence Monitoring 🧠
                </MudText>

                <MudGrid>
                    @foreach (var comp in _competitorAlerts)
                    {
                        <MudItem xs="12" md="4">
                            <MudPaper Class="pa-5 rounded-lg competitor-card" Elevation="2">
                                <MudText Typo="Typo.subtitle2" Class="fw-bold">
                                    @@comp.Username
                                </MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">
                                    @comp.Platform
                                </MudText>

                                <MudDivider Class="my-2" />

                                <MudText Typo="Typo.body2">
                                    "@Analyzer.AnalyzeCompetitor(comp)"
                                </MudText>
                            </MudPaper>
                        </MudItem>
                    }
                </MudGrid>

            </MudItem>
        </MudGrid>
    }
</MudContainer>

@code {
    private bool _isSyncing = false;
    private bool _isLoading = true;
    private List<SocialTrend> _trends = new();
    private SocialTrend _topTrend;
    private string _analysisResult;
    private List<CompetitorData> _competitorAlerts = new();

    private const int ScrapeIntervalHours = 24;

    protected override async Task OnInitializedAsync()
    {
        // Jangan panggil LoadDashboardData dengan 'await' agar UI tidak terkunci total jika ada background task
        await LoadDashboardData();
    }

    private void TestSnackbar()
    {
        Snackbar.Add("Tes Snackbar Berhasil!", Severity.Success);
    }

    private async Task LoadDashboardData()
    {
        _isLoading = true;

        // 1. Ambil data dari DB (Cepat)
        _trends = await Repo.GetTrendsAsync();

        if (_trends.Any())
        {
            await ProcessDataForUI();
            _isLoading = false;
            StateHasChanged();
        }

        // 2. Cek apakah perlu ambil data baru (Stale Check)
        var lastTrend = _trends.OrderByDescending(t => t.DiscoveredAt).FirstOrDefault();
        bool isDataStale = lastTrend == null ||
                          (DateTime.Now - lastTrend.DiscoveredAt).Value.TotalHours >= ScrapeIntervalHours;

        _competitorAlerts = new List<CompetitorData>
        {
            new CompetitorData { Username = "beauty_enthusiast", Platform = "Instagram" },
            new CompetitorData { Username = "skin_expert", Platform = "TikTok" }
        };

        if (isDataStale)
        {
            // Menjalankan di thread terpisah agar halaman tidak lag saat loading awal
            _ = Task.Run(async () => await ExecuteScrapingFlow());
        }

        _isLoading = false;
    }

    private async Task RefreshTrends()
    {
        if (_isSyncing) return;

        var lastTrend = _trends.OrderByDescending(t => t.DiscoveredAt).FirstOrDefault();

        if (lastTrend != null)
        {
            var timePassed = DateTime.Now - lastTrend.DiscoveredAt;
            double hoursPassed = timePassed.Value.TotalHours;

            if (hoursPassed < ScrapeIntervalHours)
            {
                var remaining = (int)Math.Ceiling(ScrapeIntervalHours - hoursPassed);
                // Notifikasi ini akan langsung muncul karena dipanggil dari UI thread
                Snackbar.Add($"Data masih baru. Refresh manual tersedia dalam {remaining} jam lagi.", Severity.Info);
                return;
            }
        }

        Snackbar.Add("Memulai penarikan data terbaru dari TikTok...", Severity.Info);

        // Panggil langsung tanpa Task.Run karena ini aksi user (ingin menunggu feedback)
        await ExecuteScrapingFlow();
    }

    private async Task ExecuteScrapingFlow()
    {
        // Pastikan perubahan state UI dilakukan melalui InvokeAsync jika dipanggil dari Task.Run
        await InvokeAsync(() =>
        {
            _isSyncing = true;
            StateHasChanged();
        });

        try
        {
            var freshData = await Scraper.FetchTrendData();
            if (freshData != null && freshData.Any())
            {
                await Repo.SaveTrendRangeAsync(freshData);
                _trends = await Repo.GetTrendsAsync();
                await ProcessDataForUI();

                // PENTING: Gunakan Action di dalam Add untuk thread safety
                await InvokeAsync(() =>
                {
                    Snackbar.Add("Data berhasil diperbarui dari API!", Severity.Success);
                });
            }
        }
        catch (Exception ex)
        {
            var detailedError = ex.Message;
            if (ex.InnerException != null) detailedError += " -> " + ex.InnerException.Message;

            await InvokeAsync(() =>
            {
                Snackbar.Add($"Gagal Sinkronisasi: {detailedError}", Severity.Error);
            });
        }
        finally
        {
            await InvokeAsync(() =>
            {
                _isSyncing = false;
                StateHasChanged();
            });
        }
    }

    private async Task ProcessDataForUI()
    {
        if (_trends.Any())
        {
            _topTrend = _trends.First();
            var analysisInput = new TrendData { Keyword = _topTrend.TrendName, Platform = _topTrend.Platform };
            _analysisResult = Analyzer.AnalyzeTrend(analysisInput);
            ReportService.GenerateReport(_analysisResult);
        }
    }
}