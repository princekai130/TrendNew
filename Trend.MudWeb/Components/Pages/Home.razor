@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor

<PageTitle>Trendz - Dominate Your Social Media Niche</PageTitle>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700;800&display=swap');

    .landing-wrapper {
        font-family: 'Outfit', sans-serif;
        overflow-x: hidden;
        background-color: var(--mud-palette-background);
    }

    /* Typography Hero */
    .hero-title {
        line-height: 1.05;
        font-size: clamp(2.5rem, 8vw, 4.5rem);
        letter-spacing: -3px;
        font-weight: 800;
    }

    .hero-gradient-text {
        background: linear-gradient(90deg, #594AE2 0%, #FF4081 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
    }

    /* Glassmorphism Cards */
    .glass-card-lp {
        background: var(--mud-palette-surface);
        border: 1px solid var(--mud-palette-divider);
        border-radius: 32px !important;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

        .glass-card-lp:hover {
            transform: translateY(-12px);
            border-color: var(--mud-palette-primary);
            box-shadow: 0 30px 60px -12px rgba(0,0,0,0.15);
        }

    /* Decorative Elements */
    .mesh-blob {
        position: absolute;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(89,74,226,0.15) 0%, transparent 70%);
        top: -100px;
        right: -150px;
        z-index: 0;
        filter: blur(80px);
        pointer-events: none;
    }

    .pricing-premium-lp {
        border: 2px solid var(--mud-palette-primary) !important;
        position: relative;
    }

    .feature-icon-box {
        width: 64px;
        height: 64px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 24px;
    }

    .btn-hero-primary {
        background: #000 !important;
        color: white !important;
        padding: 16px 40px !important;
        border-radius: 18px !important;
        font-weight: 700 !important;
        text-transform: none !important;
        font-size: 1.1rem !important;
    }

    .dark .btn-hero-primary {
        background: #fff !important;
        color: #000 !important;
    }

    .floating-stats {
        border-top: 1px solid var(--mud-palette-divider);
        border-bottom: 1px solid var(--mud-palette-divider);
        padding: 40px 0;
    }
</style>

<div class="landing-wrapper">
    <MudContainer MaxWidth="MaxWidth.Large" Class="mt-16 relative">
        <div class="mesh-blob"></div>

        @* --- HERO SECTION --- *@
        <MudGrid AlignItems="AlignItems.Center" Class="mb-16 pb-12">
            <MudItem xs="12" md="7" Class="animate__animated animate__fadeInLeft">
                <MudStack Spacing="4">
                    <div class="d-flex align-center">
                        <MudChip T="string" Color="Color.Primary" Variant="Variant.Text" Icon="@Icons.Material.Rounded.AutoAwesome" Class="fw-bold px-4">NEXT-GEN ANALYTICS</MudChip>
                    </div>
                    <MudText Typo="Typo.h1" Class="hero-title">
                        Dominasi Niche <br /> Dengan <span class="hero-gradient-text">Data Viral.</span>
                    </MudText>
                    <MudText Typo="Typo.h6" Class="mt-4 mb-8" Style="color: var(--mud-palette-text-secondary); line-height: 1.6; max-width: 580px; font-weight: 400;">
                        Trendz adalah intelijen media sosial yang membantu Anda menemukan tren TikTok & Instagram sebelum orang lain menyadarinya. Berhenti menebak, mulai memimpin.
                    </MudText>
                    @* --- HERO BUTTONS (LOGIC AUTH) --- *@
                    <AuthorizeView>
                        <NotAuthorized>
                            @* Hanya muncul jika user belum login *@
                            <MudStack Direction="Row" Spacing="4" Class="mt-6">
                                <MudButton Href="/register" Variant="Variant.Filled" Class="btn-hero-primary">Mulai Sekarang — Gratis</MudButton>
                                <MudButton Href="/pricing" Variant="Variant.Outlined" Class="rounded-xl px-8" Style="text-transform:none; font-weight:700;">Lihat Paket</MudButton>
                            </MudStack>
                        </NotAuthorized>

                        <Authorized>
                            @* Muncul jika user sudah login *@
                            <MudStack Direction="Row" Spacing="4" Class="mt-6">
                                <MudButton Href="/dashboard"
                                           Variant="Variant.Filled"
                                           Color="Color.Primary"
                                           Class="rounded-xl px-10 py-4 shadow-lg fw-bold"
                                           Style="text-transform:none; font-size: 1.1rem;">
                                    Buka Dashboard Saya
                                </MudButton>
                                <MudButton Href="/trendexplorer"
                                           Variant="Variant.Text"
                                           Color="Color.Primary"
                                           StartIcon="@Icons.Material.Rounded.Search"
                                           Class="px-6 fw-bold"
                                           Style="text-transform:none;">
                                    Eksplor Tren
                                </MudButton>
                            </MudStack>
                        </Authorized>
                    </AuthorizeView>
                </MudStack>
            </MudItem>

            <MudItem xs="12" md="5" Class="d-flex justify-center animate__animated animate__fadeInRight">
                <MudPaper Elevation="0" Class="pa-4 glass-card-lp overflow-hidden shadow-2xl w-100" Style="background: rgba(var(--mud-palette-surface-rgb), 0.5); backdrop-filter: blur(10px);">
                    <div class="d-flex align-center mb-6 pa-2 rounded-lg" style="background: var(--mud-palette-background-grey)">
                        <div class="d-flex gap-2">
                            <div style="width:10px; height:10px; border-radius:50%; background:#FF5F56"></div>
                            <div style="width:10px; height:10px; border-radius:50%; background:#FFBD2E"></div>
                            <div style="width:10px; height:10px; border-radius:50%; background:#27C93F"></div>
                        </div>
                        <MudText Typo="Typo.caption" Class="ml-auto opacity-50 fw-bold">trendz_intel_v2.exe</MudText>
                    </div>
                    <MudStack Spacing="4">
                        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="140px" Class="rounded-xl" />
                        <div class="d-flex gap-4">
                            <MudSkeleton SkeletonType="SkeletonType.Circle" Width="40px" Height="40px" />
                            <MudStack Spacing="1" Class="flex-grow-1">
                                <MudSkeleton Width="60%" Height="12px" />
                                <MudSkeleton Width="90%" Height="12px" />
                            </MudStack>
                        </div>
                        <MudProgressLinear Color="Color.Primary" Value="75" Class="rounded-pill" Height="10" />
                    </MudStack>
                </MudPaper>
            </MudItem>
        </MudGrid>

        @* --- STATS BAR --- *@
        <div class="floating-stats d-flex flex-wrap justify-space-around align-center mb-16">
            <div class="text-center px-8 py-4">
                <MudText Typo="Typo.h3" Class="fw-bold" Color="Color.Primary">24/7</MudText>
                <MudText Typo="Typo.overline" Style="letter-spacing:2px;">AI MONITORING</MudText>
            </div>
            <div class="text-center px-8 py-4">
                <MudText Typo="Typo.h3" Class="fw-bold" Color="Color.Primary">1.2M+</MudText>
                <MudText Typo="Typo.overline" Style="letter-spacing:2px;">DATA PROCESSED</MudText>
            </div>
            <div class="text-center px-8 py-4">
                <MudText Typo="Typo.h3" Class="fw-bold" Color="Color.Primary">98%</MudText>
                <MudText Typo="Typo.overline" Style="letter-spacing:2px;">ACCURACY RATE</MudText>
            </div>
        </div>

        @* --- FEATURES --- *@
        <div class="text-center mb-16">
            <MudText Typo="Typo.h3" Class="fw-bold mb-4" Style="letter-spacing:-1px;">Didesain Untuk Kreator Pro</MudText>
            <MudText Typo="Typo.body1" Color="Color.Secondary" Style="max-width:600px; margin: 0 auto;">Fitur yang memberikan Anda keunggulan kompetitif yang tidak dimiliki orang lain.</MudText>
        </div>

        <MudGrid Spacing="6" Class="mb-16 pb-16">
            <MudItem xs="12" md="4">
                <MudPaper Class="pa-10 glass-card-lp h-100 shadow-none">
                    <div class="feature-icon-box" style="background: rgba(89,74,226,0.1); color: #594AE2;">
                        <MudIcon Icon="@Icons.Material.Rounded.AutoFixHigh" Size="Size.Large" />
                    </div>
                    <MudText Typo="Typo.h5" Class="fw-bold mb-3">AI Discovery</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Secondary" Style="line-height: 1.7;">Sistem kami menyaring ribuan data dan hanya menyajikan tren yang memiliki probabilitas viral tertinggi.</MudText>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudPaper Class="pa-10 glass-card-lp h-100 shadow-none">
                    <div class="feature-icon-box" style="background: rgba(255,64,129,0.1); color: #FF4081;">
                        <MudIcon Icon="@Icons.Material.Rounded.Bolt" Size="Size.Large" />
                    </div>
                    <MudText Typo="Typo.h5" Class="fw-bold mb-3">Momentum Tracker</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Secondary" Style="line-height: 1.7;">Ketahui tren saat masih di tahap awal (Early Rising). Jangan posting saat tren sudah jenuh.</MudText>
                </MudPaper>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudPaper Class="pa-10 glass-card-lp h-100 shadow-none">
                    <div class="feature-icon-box" style="background: rgba(76,175,80,0.1); color: #4CAF50;">
                        <MudIcon Icon="@Icons.Material.Rounded.Insights" Size="Size.Large" />
                    </div>
                    <MudText Typo="Typo.h5" Class="fw-bold mb-3">Deep Analytics</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Secondary" Style="line-height: 1.7;">Bukan sekadar hashtag. Kami memberikan data audio, engagement rate, hingga saran konten dari AI.</MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>

        @* --- PRICING SECTION --- *@
        <AuthorizeView>
            <NotAuthorized>
                <MudDivider Class="mb-16" Style="opacity:0.05" />
                <div class="text-center mb-12">
                    <MudChip T="string" Color="Color.Primary" Variant="Variant.Filled" Class="mb-4 fw-bold">PRICING PLANS</MudChip>
                    <MudText Typo="Typo.h3" Class="fw-bold" Style="letter-spacing:-1.5px;">Investasi Untuk Pertumbuhan Anda</MudText>
                </div>

                <MudGrid Justify="Justify.Center" Class="mb-16">
                    <MudItem xs="12" sm="6" md="5">
                        <MudPaper Class="pa-12 d-flex flex-column glass-card-lp h-100 shadow-none">
                            <MudText Typo="Typo.h5" Class="fw-bold mb-1">Explorer</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-8">Basic insights untuk pemula.</MudText>
                            <MudText Typo="Typo.h2" Class="fw-bold mb-8">Gratis</MudText>
                            <MudDivider Class="mb-8" />
                            <MudStack Spacing="3" Class="mb-10">
                                <div class="d-flex align-center"><MudIcon Icon="@Icons.Material.Rounded.CheckCircle" Color="Color.Success" Size="Size.Small" Class="mr-3" /><MudText>3 Tren Teratas Harian</MudText></div>
                                <div class="d-flex align-center"><MudIcon Icon="@Icons.Material.Rounded.CheckCircle" Color="Color.Success" Size="Size.Small" Class="mr-3" /><MudText>Pencarian Niche Dasar</MudText></div>
                            </MudStack>
                            <MudButton Href="/register" Variant="Variant.Outlined" Color="Color.Primary" FullWidth Class="py-4 rounded-xl fw-bold">Mulai Gratis</MudButton>
                        </MudPaper>
                    </MudItem>

                    <MudItem xs="12" sm="6" md="5">
                        <MudPaper Class="pa-12 d-flex flex-column glass-card-lp pricing-premium-lp h-100 shadow-xl">
                            <div style="position: absolute; top: 30px; right: -40px; background: #FF4081; color: white; padding: 6px 50px; transform: rotate(45deg); font-size: 0.8rem; font-weight: 900; letter-spacing: 1px;">TERBAIK</div>
                            <MudText Typo="Typo.h5" Class="fw-bold mb-1">Strategist</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-8">Fitur penuh untuk kreator serius.</MudText>
                            <div class="d-flex align-end mb-8">
                                <MudText Typo="Typo.h2" Color="Color.Primary" Class="fw-bold">Rp 149k</MudText>
                                <MudText Typo="Typo.h6" Class="ml-2 mb-2">/ bln</MudText>
                            </div>
                            <MudDivider Class="mb-8" />
                            <MudStack Spacing="3" Class="mb-10">
                                <div class="d-flex align-center"><MudIcon Icon="@Icons.Material.Rounded.CheckCircle" Color="Color.Primary" Size="Size.Small" Class="mr-3" /><MudText Class="fw-bold">Akses "The Hot List" Eksklusif</MudText></div>
                                <div class="d-flex align-center"><MudIcon Icon="@Icons.Material.Rounded.CheckCircle" Color="Color.Primary" Size="Size.Small" Class="mr-3" /><MudText>Monitor Kompetitor Tanpa Batas</MudText></div>
                                <div class="d-flex align-center"><MudIcon Icon="@Icons.Material.Rounded.CheckCircle" Color="Color.Primary" Size="Size.Small" Class="mr-3" /><MudText>Laporan Analisis AI Mingguan</MudText></div>
                            </MudStack>
                            <MudButton Href="/register" Variant="Variant.Filled" Color="Color.Primary" FullWidth Class="py-4 rounded-xl fw-bold shadow-lg">Langganan Sekarang</MudButton>
                        </MudPaper>
                    </MudItem>
                </MudGrid>
            </NotAuthorized>

            <Authorized>
                <div class="text-center py-16 animate__animated animate__pulse animate__infinite">
                    <MudPaper Class="pa-12 glass-card-lp d-inline-block shadow-2xl">
                        <MudText Typo="Typo.h4" Class="fw-bold mb-2">Siap Melejitkan Akun Anda, @context.User.Identity?.Name?</MudText>
                        <MudText Typo="Typo.body1" Color="Color.Secondary" Class="mb-8">Sistem Intelijen kami telah menyiapkan data terbaru untuk Anda.</MudText>
                        <MudButton Href="/dashboard" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Class="rounded-pill px-12 py-4 shadow-lg fw-bold">
                            Buka Dashboard Analitik
                        </MudButton>
                    </MudPaper>
                </div>
            </Authorized>
        </AuthorizeView>
    </MudContainer>
</div>